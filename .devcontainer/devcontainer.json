{
    "name": "rl_replanner training env",
    "remoteUser": "rosdev",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "rosdev",
            "GID": "1000",
            "UID": "1000"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "ms-vscode.cpptools-extension-pack",
                "smilerobotics.urdf",
                "redhat.vscode-xml",
                "tamasfe.even-better-toml",
                "timonwong.shellcheck",
                "yzhang.markdown-all-in-one",
                "mhutchie.git-graph"
            ],
            "settings": {
                "files.associations": {
                    "*.rviz": "yaml",
                    "*.srdf": "xml",
                    "*.urdf": "xml",
                    "*.xacro": "xml"
                },
                "remote.autoForwardPorts": false
            }
        }
    },
    
    "workspaceFolder": "/home/rosdev/ros2_ws/",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/rosdev/ros2_ws/,type=bind",
    "mounts": [],
    "runArgs": [
        "--net=host",
        "--privileged",
        "--env", "DISPLAY=${localEnv:DISPLAY}",
        "--volume", "/tmp/.X11-unix:/tmp/.X11-unix:rw",
        "--volume", "${localEnv:XAUTHORITY}:/root/.Xauthority:ro",
        "--env", "QT_X11_NO_MITSHM=1",
        "--name", "rl_replanner_training",
        "--runtime=nvidia",
        "--gpus", "all"
    ]
  }